pipeline {
    agent any

    stages {
        stage('Build Stage') {
            steps {
                echo 'This is build test'
            }
        }
        stage('Test Stage') {
            steps {
                echo 'This is Test test.'
            }
        }
        
        stage('Deploy to prod stage') {
            steps {
                input 'Can we Deploy to PROD'
            }
        }
        
    }
    post {
            always {
                echo 'I will always say Hello again!'
            }
            aborted {
                echo 'Changes are aborted, not deploying it to PROD'
            }
            success {
                echo ' Job is successfull'
            }
        }
}
